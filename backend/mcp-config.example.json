{
  "mcpServers": {
    "atlassian": {
      "command": "node",
      "args": ["./mcp-server/server.js"],
      "env": {
        "ATLASSIAN_URL": "https://your-domain.atlassian.net",
        "ATLASSIAN_EMAIL": "your-email@domain.com",
        "ATLASSIAN_API_TOKEN": "your-jira-api-token"
      }
    }
  }
}